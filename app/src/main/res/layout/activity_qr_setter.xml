<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Users.Feautures.QrSetter">
    <!--toolbar-->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/tback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_back_24"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="QR Code Generator"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="@font/rubik_light" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="@font/rubik_light"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24dp"
        android:text="Transaction Receipt"
        android:gravity="center"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@drawable/gray_radious"
        >
        <!--headings-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--name-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/rubik_light"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Name"
                />

            <!--contact no-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/rubik_light"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Contact No :"
                android:layout_marginTop="10dp"
                />

            <!--request amount-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/rubik_light"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Amount"
                android:layout_marginTop="10dp"
                />

            <!--Message-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/rubik_light"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Message"
                android:layout_marginTop="10dp"
                />

            <!--DateTime-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/rubik_light"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Date Time"
                android:layout_marginTop="10dp"
                />


        </LinearLayout>

        <!--values-->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--name-->
            <TextView
                android:id="@+id/qr_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/rubik_light"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="0"
                />

            <!--contactno-->
            <TextView
                android:id="@+id/qr_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/rubik_light"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="No"
                android:layout_marginTop="10dp"
                />

            <!--req amount-->
            <TextView
                android:id="@+id/qr_req"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/rubik_light"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="0"
                android:layout_marginTop="10dp"
                />

            <!--message-->
            <TextView
                android:id="@+id/qr_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/rubik_light"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="0"
                android:layout_marginTop="10dp"
                />

            <!--datetime-->
            <TextView
                android:id="@+id/qr_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/rubik_light"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="0"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>





    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Transaction"
        android:id="@+id/btn_gen"
        android:layout_gravity="center"
        android:background="@drawable/cont_btn"
        android:layout_marginBottom="20dp"
        />

</LinearLayout>