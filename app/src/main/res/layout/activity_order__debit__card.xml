    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".Users.Feautures.Topup">
            <!--toolbar-->
            <LinearLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/tback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_back_24"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Order Debit Card"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/rubik_light" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    app:srcCompat="@drawable/ic_baseline_add_a_photo_24"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FA0C0C"
                    android:text="* require NIS Screen Shot"/>
            </LinearLayout>
            <!--enter a Nis no-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NIS No"
                    android:fontFamily="@font/rubik_light"
                    android:textStyle="bold"
                    android:textColor="#131A22"
                    android:textSize="19sp"
                    />
                <EditText
                    android:id="@+id/t_nis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter a NIS No"
                    android:fontFamily="@font/rubik_light"
                    android:textSize="18sp"
                    android:inputType="number"
                    android:maxLines="1"
                    android:minLines="1"
                    android:singleLine="true"
                    android:textColor="#131A22"

                    />

            </LinearLayout>

            <!--enter a phone-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:fontFamily="@font/rubik_light"
                    android:textStyle="bold"
                    android:textColor="#131A22"
                    android:textSize="19sp"
                    />
                <EditText
                    android:id="@+id/t_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter a Phone Number"
                    android:fontFamily="@font/rubik_light"
                    android:textSize="18sp"
                    android:inputType="number"
                    android:maxLines="1"
                    android:minLines="1"
                    android:singleLine="true"
                    android:textColor="#131A22"

                    />

            </LinearLayout>

            <!--enter a address-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:fontFamily="@font/rubik_light"
                    android:textStyle="bold"
                    android:textColor="#131A22"
                    android:textSize="19sp"
                    />
                <EditText
                    android:id="@+id/t_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter a Complete Address"
                    android:fontFamily="@font/rubik_light"
                    android:textSize="18sp"
                    android:inputType="number"
                    android:maxLines="1"
                    android:minLines="1"
                    android:singleLine="true"
                    android:textColor="#131A22"

                    />

            </LinearLayout>

            <!--enter a postalcode-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Postal Code"
                    android:fontFamily="@font/rubik_light"
                    android:textStyle="bold"
                    android:textColor="#131A22"
                    android:textSize="19sp"
                    />
                <EditText
                    android:id="@+id/postal_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter a Postal Code"
                    android:fontFamily="@font/rubik_light"
                    android:textSize="18sp"
                    android:inputType="number"
                    android:maxLines="1"
                    android:minLines="1"
                    android:singleLine="true"
                    android:textColor="#131A22"

                    />

            </LinearLayout>

            <!--cont btn-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="45dp"
                android:orientation="vertical"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/cont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cont_btn"
                    android:textColor="@color/blue"
                    android:text="Continue"
                    />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</ScrollView>