<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gray_radious"
    android:backgroundTint="@color/white"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/gray_radious"
        android:backgroundTint="@color/white"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <!--toolbar-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#1a1367"
            >
            <!--logo-->
            <TextView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:gravity="center_horizontal"
                android:text="Kujuo"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="italic"
                app:fontFamily="@font/poppins_bold" />
            <ImageView
                android:id="@+id/cros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_clear"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                />
        </RelativeLayout>

        <!--heading-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/my"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/blue_tick"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transaction Successful"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#1a1367"
                    />
                <TextView
                    android:id="@+id/datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="00-00-00"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/trans_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="ID"
                    android:textAlignment="center"/>
            </LinearLayout>

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:id="@+id/scroll"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--data-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >

                    <!--rec_by-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Received by"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            />

                        <TextView
                            android:id="@+id/rec_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="name"
                            android:textSize="16sp"
                            android:textAlignment="center"/>
                        <TextView
                            android:id="@+id/rec_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="id"
                            android:textSize="16sp"
                            android:textAlignment="center"/>
                    </LinearLayout>

                    <!--sent_by-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sent by"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            />

                        <TextView
                            android:id="@+id/sent_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="name"
                            android:textSize="16sp"
                            android:textAlignment="center"/>
                        <TextView
                            android:id="@+id/sent_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="id"
                            android:textSize="16sp"
                            android:textAlignment="center"/>
                    </LinearLayout>

                    <!--sent_by-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Transaction Type"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            />

                        <TextView
                            android:id="@+id/transatype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="name"
                            android:textSize="16sp"
                            android:textAlignment="center"/>

                    </LinearLayout>

                    <!--fees-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Amount"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            />

                        <TextView
                            android:id="@+id/trans_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="fees"
                            android:textSize="16sp"
                            android:textAlignment="center"/>

                    </LinearLayout>


                    <!--fees-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fees / Charge"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            />

                        <TextView
                            android:id="@+id/fees_charge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="fees"
                            android:textSize="16sp"
                            android:textAlignment="center"/>

                    </LinearLayout>

                    <!--total-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Amount"
                            android:textColor="#1a1367"
                            android:textSize="18dp"
                            />

                        <TextView
                            android:id="@+id/totalamount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="fees"
                            android:textSize="16sp"
                            android:textAlignment="center"/>

                    </LinearLayout>


                </LinearLayout>


                <!--end button-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    >

                    <!--save-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/save"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ic_baseline_save_alt_24"
                            android:backgroundTint="@color/black"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Save"
                            android:gravity="center"/>

                    </LinearLayout>

                    <!--share-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/share"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="30dp"
                            android:src="@drawable/sharee_download"
                            android:backgroundTint="@color/black"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Share"
                            android:gravity="center"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>




    </LinearLayout>

</LinearLayout>