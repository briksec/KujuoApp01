<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommanActivity.SplashScreen2"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/cap_boy"/>

    <!-- Welcome -->
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/welcome"/>

    <!-- Don't worry! we got -->
    <TextView
        android:id="@+id/don_t_worry"
        android:layout_width="251dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:text="@string/don_t_worry"
        android:textAppearance="@style/don_t_worry"
        android:gravity="center_horizontal|top"
        />

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/seconddot"/>

    <!-- Rectangle -->
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/next"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/done_btnclick"
        android:text="Continues"
        android:textColor="@color/white"
        />

</LinearLayout>