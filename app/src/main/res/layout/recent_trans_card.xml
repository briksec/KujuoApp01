<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="190dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/transbody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="#D5DEFF"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <!--profile-->
            <androidx.cardview.widget.CardView
                android:id="@+id/profileframe"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:id="@+id/trans_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/transname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="name"
                android:layout_below="@+id/profileframe"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/rubik_light"/>

            <TextView
                android:id="@+id/transno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="name"
                android:layout_below="@+id/transname"
                android:textSize="18dp"
                android:fontFamily="@font/rubik_light"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_below="@+id/transno"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/white_oval"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/trans_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/rubik"
                    android:textStyle="bold"
                    android:text="$ 24"
                    />
            </LinearLayout>
]        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>