<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Users.Feautures.BusSeatReserved">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--toolbar-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".Users.Feautures.Topup">
            <!--toolbar-->
            <LinearLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/tback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_back_24"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Seat Resevation"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/rubik_light" />
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/gray"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <!--LEAVING FROM-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LEAVING FROM"
                android:textSize="20dp"
                android:fontFamily="@font/rubik"
                android:textColor="@color/black"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/spinnerTheme"
                android:layout_marginTop="10dp"
                android:entries="@array/city"
                android:background="@drawable/gray_radious"
                />
        </LinearLayout>

        <!--GOING TO-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GOING TO"
                android:textSize="20dp"
                android:fontFamily="@font/rubik"
                android:textColor="@color/black"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/spinnerTheme"
                android:layout_marginTop="10dp"
                android:entries="@array/city"
                android:background="@drawable/gray_radious"
                />
        </LinearLayout>

        <!--date TO-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="20dp"
                android:fontFamily="@font/rubik"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/gray_radious"
                android:hint="YY-MM-DD"
                android:paddingLeft="5dp"
                android:editable="false"

                />
        </LinearLayout>

        <!--time TO-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="20dp"
                android:fontFamily="@font/rubik"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/gray_radious"
                android:hint="H-MM"
                android:paddingLeft="5dp"
                android:editable="false"
                />
        </LinearLayout>

        <Button
            android:id="@+id/voucher_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cont_btn"
            android:text="Book"
            android:textColor="@color/blue"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>


</ScrollView>