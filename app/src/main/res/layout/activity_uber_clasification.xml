<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Users.Feautures.UberClasification">

    <!--toolbar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".Users.Feautures.Topup">
        <!--toolbar-->
        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/tback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_back_24"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Uber Voucher"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="@font/rubik_light" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >


            <RelativeLayout
                android:id="@+id/uberx"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/sqaure_item"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UberX"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/rubik"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@color/blue"
                    android:background="@drawable/white_oval"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$50"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ubergo"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/sqaure_item"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UberGo"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/rubik"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@color/blue"
                    android:background="@drawable/white_oval"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$500"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"/>
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/ubermini"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/sqaure_item"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mini"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/rubik"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@color/blue"
                    android:background="@drawable/white_oval"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$20"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"/>
                </LinearLayout>
            </RelativeLayout>






        </LinearLayout>
    </ScrollView>
</LinearLayout>