<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Users.Feautures.WalletToWallet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--toolbar-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".Users.Feautures.Topup">
            <!--toolbar-->
            <LinearLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/tback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_back_24"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Transfer To Wallet"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/rubik_light" />
            </LinearLayout>

        </LinearLayout>

        <!--ballance-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Balance"
                android:fontFamily="@font/rubik_light"
                android:textColor="@color/black"
                android:textSize="24dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <!--text-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/t_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:textColor="@color/black"
                        android:textSize="30dp" />
                    <TextView
                        android:id="@+id/t_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="****"
                        android:textColor="@color/black"
                        android:textSize="30dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/closeeye"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_eye_close"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/black"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:id="@+id/openeye"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_open_eye"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/black"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>

                </LinearLayout>
                <!--currency-->
                <Spinner
                    android:id="@+id/balCurr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jamniradious"
                    android:layout_gravity="center"
                    android:theme="@style/spinnerTheme"
                    android:entries="@array/Currency"
                    style="@style/customSpinnerTheme"
                    android:backgroundTint="@color/blue"
                    android:dropDownHeight="100dp"
                    android:spinnerMode="dropdown"
                    android:dropDownVerticalOffset="2dp"
                    android:popupBackground="@color/blue"
                    />
            </LinearLayout>
        </LinearLayout>


        <!--Details-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transfer Detail"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/rubik"
            />

        <!--Wallet id-->
        <LinearLayout
            android:id="@+id/walletlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet ID"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/rubik"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter a Wallet ID"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/rubik"
                android:inputType="number"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

        <!--Enter A Phone no-->
        <LinearLayout
            android:id="@+id/phoneparentlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/rubik"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter A Phone Number"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:inputType="number"
                android:textStyle="bold"
                android:fontFamily="@font/rubik"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

        <!--no/qr code-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            >

            <!--phone-->
            <LinearLayout
                android:id="@+id/phonumlayout"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!--phone icon-->
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/phone_bg"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/phoneicon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/phoneicon"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/phonetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Phone Number"
                    android:textColor="@color/black"
                    android:fontFamily="@font/rubik"
                    android:textSize="16dp"
                    />
            </LinearLayout>

            <!--qr code-->
            <LinearLayout
                android:id="@+id/qr_scan"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!--phone icon-->
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/qr_bg"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/small_qr1"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="QR Code"
                    android:textColor="@color/black"
                    android:fontFamily="@font/rubik"
                    android:textSize="16dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <!--amount-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/rubik"
                android:layout_marginTop="10dp"
                />
            <!--amount with currency-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <EditText
                    android:id="@+id/t_amount"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter A Amount"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/rubik"
                    android:layout_marginTop="10dp"
                    />
                <!--currency-->
                <Spinner
                    android:id="@+id/s2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jamniradious"
                    android:layout_gravity="center"
                    android:theme="@style/spinnerTheme"
                    android:entries="@array/Currency"
                    style="@style/customSpinnerTheme"
                    android:backgroundTint="@color/blue"
                    android:popupBackground="@color/blue"
                    />
            </LinearLayout>

        </LinearLayout>

        <!--message-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/rubik"
                android:layout_marginTop="10dp"
                />
            
                <EditText
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Enter A Message"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/rubik"
                    android:layout_marginTop="10dp"
                    android:padding="8dp"
                    android:background="@drawable/edittext_boder"
                    />
            
            </LinearLayout>

        <!--continue-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="18dp"
            android:gravity="center">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cont_btn"
                android:text="Continue"
                android:textColor="@color/blue"
                android:textSize="18dp"
                android:fontFamily="sans-serif-condensed"/>
        </LinearLayout>
        
        </LinearLayout>
    
</ScrollView>