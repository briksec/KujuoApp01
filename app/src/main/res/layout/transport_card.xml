<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="275dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
   >

    <androidx.cardview.widget.CardView
        android:id="@+id/transbody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#D5DEFF"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/trans_bg"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/ocean"
                />


            <TextView
                android:id="@+id/transname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Oasis Ocean 7 Charters"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/rubik_light"/>

            <TextView
                android:id="@+id/transdes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Oasis Ocean 7 Charters"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/rubik_light"/>

            <LinearLayout
                android:layout_below="@+id/transno"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/redrectangle"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/trans_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik"
                    android:textStyle="bold"
                    android:text="Book $54"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    />
            </LinearLayout>
              </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>